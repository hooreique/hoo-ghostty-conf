# https://ghostty.org/docs/config/reference

theme                     = Monokai Pro Octagon
font-family               = Cartograph CF
font-style                = Demi Bold
font-style-bold           = Heavy
font-style-italic         = Demi Bold Italic
font-style-bold-italic    = Heavy Italic
font-feature              = ss03
font-size                 = 20
cursor-color              = e1e3e4
cursor-text               = 181a1c
adjust-cell-width         = -10%
adjust-cell-height        = -25%
adjust-cursor-height      = -25%
adjust-underline-position = 3
window-position-x         = 350
window-position-y         = 80
window-height             = 30
window-width              = 103
window-padding-x          = 0
window-padding-y          = 0
mouse-hide-while-typing   = true
clipboard-read            = allow

background-opacity = 0.95

macos-option-as-alt  = true
macos-titlebar-style = tabs
macos-window-shadow  = false

keybind = clear

keybind = super+c=copy_to_clipboard
keybind = super+v=paste_from_clipboard
keybind = super+q=quit
keybind = super+zero=reset_font_size
keybind = super+minus=decrease_font_size:1
keybind = super+equal=increase_font_size:1
keybind = unconsumed:super+k=clear_screen
